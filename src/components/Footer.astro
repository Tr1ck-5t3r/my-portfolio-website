---
import { Icon } from "@astrojs/starlight/components";
import { SOCIAL_MEDIA as sc, Name } from "../consts";
---

<footer class="site-footer">
  <div class="footer-content">
    <p class="footer-text">
      Made with <span class="heart-icon" aria-label="love">ðŸ«€</span> by {Name}
    </p>
    <div class="social-links">
      <a
        href={sc.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Connect on LinkedIn"
        title="LinkedIn"
      >
        <Icon name="linkedin" class="icon" />
      </a>
      <a href={`mailto:${sc.email}`} aria-label="Send an Email" title="Email">
        <Icon name="email" class="icon" />
      </a>
      <a
        href={sc.github}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="View GitHub Profile"
        title="GitHub"
      >
        <Icon name="github" class="icon" />
      </a>
      {/* Add other links as needed */}
    </div>
  </div>
</footer>

<style>
  .site-footer {
    padding: 2.5rem 1rem;
    background-color: var(--bg-muted);
    color: var(--text-light);
    text-align: center;
    border-top: 1px solid rgba(var(--text-color-rgb, 0, 0, 0), 0.08); /* Requires --text-color-rgb */
    /* border-top: 1px solid var(--bg-muted); */ /* Alternative */
    margin-top: 4rem; /* Ensure space above footer */
    font-family: "Raleway", sans-serif;
  }

  .footer-content {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem; /* Space between text and icons */
  }

  .footer-text {
    font-size: 0.95rem;
    opacity: 0.8;
    margin: 0;
  }

  .heart-icon {
    display: inline-block;
    transform: translateY(1px) scale(1.1);
    margin: 0 0.2em;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.2rem; /* Spacing between icons */
  }

  .social-links a {
    display: inline-flex; /* Use flex for centering icon */
    justify-content: center;
    align-items: center;
    color: var(--text-light); /* Use lighter text color for icons */
    text-decoration: none;
    padding: 0.5rem; /* Padding around icon */
    border-radius: 50%; /* Circular background */
    background-color: rgba(
      var(--text-color-rgb, 0, 0, 0),
      0.05
    ); /* Subtle background */
    transition:
      background-color 0.2s ease,
      color 0.2s ease,
      transform 0.2s ease;
  }

  .social-links a:hover,
  .social-links a:focus-visible {
    color: var(--bg-muted); /* Icon color changes */
    background-color: var(--clr-2); /* Use accent color for background */
    transform: translateY(-2px) scale(1.05);
    outline: none;
  }

  .social-links a:focus-visible {
    box-shadow:
      0 0 0 3px var(--bg-color),
      0 0 0 5px var(--clr-2);
  }

  .icon {
    width: 1.3em; /* Adjusted icon size */
    height: 1.3em;
    display: block; /* Ensure icon behaves like block */
  }

  /* Hide sr-only text visually but keep for accessibility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 2rem 1rem;
    }
    .footer-content {
      gap: 1rem;
    }
    .footer-text {
      font-size: 0.9rem;
    }
    .social-links a {
      padding: 0.4rem;
    }
    .icon {
      width: 1.2em;
      height: 1.2em;
    }
  }
</style>
